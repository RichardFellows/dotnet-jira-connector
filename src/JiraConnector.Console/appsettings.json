{
  "Jira": {
    "BaseUrl": "https://your-jira-server.com",
    "Username": "your-username",
    "PersonalAccessToken": "your-pat-token-here",
    "ProjectKeys": [
      "PROJ1",
      "PROJ2"
    ],
    "CustomFields": [
      "customfield_10001",
      "customfield_10002"
    ],
    "TimeoutSeconds": 30,
    "MaxResultsPerRequest": 100
  },
  "Database": {
    "FilePath": "jira_data.duckdb",
    "CreateIfNotExists": true,
    "ConnectionTimeoutSeconds": 30,
    "EnableWalMode": true,
    "MemoryLimitMB": 1024
  },
  "Sync": {
    "IntervalMinutes": 30,
    "FullSyncOnStartup": false,
    "LookbackDays": 7,
    "BatchSize": 50,
    "SyncComments": true,
    "SyncAttachments": true,
    "SyncChangelog": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "JiraConnector": "Debug"
    }
  }
}